{
  "extends": "expo/tsconfig.base",
  "baseUrl": "./",
  "paths": {
    "src/*": ["src/*"],
    "*": ["types/*"]
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
